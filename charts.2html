<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Monthly Sales - Line Chart</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body {
      margin: 0;
      background-color: #1e1e2f;
      font-family: 'Segoe UI', sans-serif;
      color: white;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .chart-container {
      width: 90%;
      max-width: 700px;
      padding: 2rem;
      background-color: #2b2c40;
      border-radius: 12px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.6);
    }

    h2 {
      text-align: center;
      color: #00d1ff;
      margin-bottom: 1rem;
    }
  </style>
</head>
<body>

<div class="chart-container">
  <h2>Monthly Sales (Last 6 Months)</h2>
  <canvas id="lineChart"></canvas>
</div>

<script>
  const ctx = document.getElementById('lineChart').getContext('2d');

  const lineChart = new Chart(ctx, {
    type: 'line',
    data: {
      labels: ['March', 'April', 'May', 'June', 'July', 'August'],
      datasets: [{
        label: 'Sales ($)',
        data: [4200, 5500, 4900, 6100, 7500, 6800],
        fill: false,
        borderColor: '#00d1ff',
        backgroundColor: '#00d1ff',
        tension: 0.4,
        pointBackgroundColor: '#ffffff',
        pointRadius: 5,
        pointHoverRadius: 7
      }]
    },
    options: {
      responsive: true,
      plugins: {
        legend: {
          labels: { color: '#fff' }
        }
      },
      scales: {
        x: {
          ticks: { color: '#ffffff' },
          grid: { color: '#333' }
        },
        y: {
          beginAtZero: true,
          ticks: { color: '#ffffff' },
          grid: { color: '#333' }
        }
      }
    }
  });
</script>

</body>
</html>
